<!-- Firebase -->
<script type="module">
import { initializeApp } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js";
import { getFirestore, collection, getDocs, addDoc, doc, updateDoc, onSnapshot } from "https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js";

// üîπ COLE AQUI SUA CONFIG DO FIREBASE
const firebaseConfig = {
  apiKey: "SUA_API_KEY",
  authDomain: "SEU_DOMINIO",
  projectId: "SEU_PROJECT_ID",
  storageBucket: "SEU_BUCKET",
  messagingSenderId: "SEU_ID",
  appId: "SUA_APP_ID"
};

const app = initializeApp(firebaseConfig);
const db = getFirestore(app);

const gifts = [
"Jogo de Panelas",
"Liquidificador",
"Air Fryer",
"Micro-ondas",
"Cafeteira",
"Jogo de Talheres",
"Conjunto de Pratos",
"Jogo de Copos",
"Ferro de Passar",
"Sanduicheira",
"Ventilador",
"Aspirador de P√≥",
"Toalhas de Banho",
"Edredom",
"Lixeira Inox",
"T√°bua de Passar",
"Escorredor de Lou√ßa",
"Jogo de Potes",
"Chaleira El√©trica",
"Kit de Facas"
];

const giftList = document.getElementById("giftList");
const giftsRef = collection(db, "presentes");

function renderGifts(snapshot) {
    giftList.innerHTML = "";
    gifts.forEach(gift => {
        const docGift = snapshot.docs.find(d => d.data().nome === gift);
        const isTaken = docGift?.data().reservado;

        const div = document.createElement("div");
        div.className = "gift";

        div.innerHTML = `
            <h3>${gift}</h3>
            <button class="${isTaken ? 'taken' : 'available'}"
                ${isTaken ? 'disabled' : ''}>
                ${isTaken ? 'Indispon√≠vel' : 'Escolher'}
            </button>
        `;

        if (!isTaken) {
            div.querySelector("button").onclick = async () => {
                const nome = prompt("Digite seu nome para confirmar:");
                if(nome) {
                    await addDoc(giftsRef, {
                        nome: gift,
                        reservado: true,
                        reservadoPor: nome
                    });
                }
            };
        }

        giftList.appendChild(div);
    });
}

onSnapshot(giftsRef, (snapshot) => {
    renderGifts(snapshot);
});
</script>

